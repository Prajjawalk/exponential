{
    "display_information": {
        "name": "Exponential Bot",
        "description": "AI Project Manager - Chat with Paddy, manage projects, and track tasks"
    },
    "features": {
        "app_home": {
            "home_tab_enabled": true,
            "messages_tab_enabled": true,
            "messages_tab_read_only_enabled": false
        },
        "bot_user": {
            "display_name": "Exponential Bot",
            "always_online": true
        },
        "slash_commands": [
            {
                "command": "/expo",
                "url": "https://exponential.im/api/webhooks/slack",
                "description": "Manage projects and tasks",
                "usage_hint": "create [task] | list | projects | chat [message]",
                "should_escape": false
            },
            {
                "command": "/paddy",
                "url": "https://exponential.im/api/webhooks/slack",
                "description": "Chat with Paddy AI assistant",
                "usage_hint": "[your question or message]",
                "should_escape": false
            }
        ]
    },
    "oauth_config": {
        "redirect_urls": [
            "https://exponential.im/api/auth/slack/callback"
        ],
        "scopes": {
            "bot": [
                "app_mentions:read",
                "channels:history",
                "channels:read", 
                "commands",
                "chat:write",
                "chat:write.customize",
                "chat:write.public",
                "groups:read",
                "users:read",
                "reactions:read",
                "reactions:write",
                "im:write",
                "im:read",
                "im:history",
                "team:read",
                "mpim:read"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "request_url": "https://exponential.im/api/webhooks/slack",
            "bot_events": [
                "app_mention",
                "message.channels",
                "message.groups",
                "message.im",
                "message.mpim"
            ]
        },
        "interactivity": {
            "is_enabled": true,
            "request_url": "https://exponential.im/api/webhooks/slack"
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": false,
        "token_rotation_enabled": false
    }
}